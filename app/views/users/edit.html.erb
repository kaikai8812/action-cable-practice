

<%= render 'layouts/errors', obj: @user %>

<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      <h1>User info</h1>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form_group mb-3">
        <label for="inputName" >Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control name", placeholder:"#{@user.name}" %>
      </div>
       <div class="form_group mb-3">
        <label>Image</label><br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
       </div>
        <div class="form_group mb-3">
        <label for="inputIntroduction">Introduction</label><br>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class:"form-control introduction", placeholder:"#{@user.introduction}" %>
        </div>
        <%= f.submit "Update User", {class: "Log_in_button btn btn-secondary "} %>
        
      <% end %>
    </div>
  </div>
</div>


